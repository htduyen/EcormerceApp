<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@drawable/button_radius_border">

    <ImageView
        android:id="@+id/imv_discount_reward"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reward" />

    <TextView
        android:id="@+id/txt_name_reward_reward"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Khuyến mãi"
        android:textColor="@color/colorwhitewhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imv_discount_reward"
        app:layout_constraintStart_toEndOf="@+id/imv_discount_reward"
        app:layout_constraintTop_toTopOf="@+id/imv_discount_reward" />

    <TextView
        android:id="@+id/txt_time_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:background="@color/colorwhitewhite"
        android:padding="2dp"
        android:text="Có hiệu lực"
        android:textColor="#ab196c"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_name_reward_reward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_name_reward_reward" />

    <TextView
        android:id="@+id/txt_content_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Chọn icon trên góc phải để được áp dụng khuyến mãi!"
        android:textColor="@color/colorwhitewhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_discount_reward" />
</android.support.constraint.ConstraintLayout>
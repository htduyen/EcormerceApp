<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ForgotPassword">

    <!-- TODO: Update blank fragment layout -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imv_forgot"
        android:layout_marginTop="10dp"
        android:src="@drawable/password"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title_forgot"
        android:layout_below="@+id/imv_forgot"
        android:text="Forgot Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorGreenDark"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/txt_guile"
        android:layout_below="@+id/txt_title_forgot"
        android:text="Chúng tôi sẽ gửi một email cho bạn đặt lại mật khẩu"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textColor="@color/colorRed"
        android:textSize="15dp"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_input_key_reset_pass"
        android:layout_below="@+id/txt_guile"
        android:background="#e1d7d7"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_key_resetpass_signin"
            android:hint="Nhập địa chỉ email tài khoản của bạn"
            android:gravity="center"
            android:textColorHint="@android:color/darker_gray"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorGreenDark"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </android.support.design.widget.TextInputLayout>
    <!--<ProgressBar-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/progress_forgot"-->
        <!--android:layout_below="@id/layout_input_key_reset_pass"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:visibility="invisible"/>
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_mail_forgot"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/layout_input_key_reset_pass">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_recei_main"
            android:text="Mail đã được gửi, check mail!"
            android:textColor="@color/colorGreenDark"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        android:theme="@style/ProgressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/progress_forgot"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_mail_forgot"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reset_pass_forgot"
        android:layout_below="@+id/progress_forgot"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="Đặt Lại Mật Khẩu"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:background="@color/colorRed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_goback_forgot"
        android:layout_below="@+id/btn_reset_pass_forgot"
        android:text="Go back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorGreenDark"
        android:textStyle="italic"
        />
</RelativeLayout>

</FrameLayout>
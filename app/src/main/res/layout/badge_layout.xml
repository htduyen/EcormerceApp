<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imv_badge_icon_cart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shopping_cart_green" />

    <TextView
        android:id="@+id/txt_badge_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/badge_count"
        android:gravity="center"
        android:text="00"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textColor="@color/colorWhiteplus"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_badge_icon_cart"
        app:layout_constraintStart_toStartOf="@+id/imv_badge_icon_cart" />
</android.support.constraint.ConstraintLayout>